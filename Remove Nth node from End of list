# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def removeNthFromEnd(self, head: Optional[ListNode], n: int) -> Optional[ListNode]:
        temp=head
        length=0
        while temp:
            length+=1
            temp=temp.next
        count=length-n-1
        if length==n:
            return head.next
        curr=head
        # prev=curr
        while curr and count!=0:
            count-=1
            curr=curr.next

        
        if curr.next:
            curr.next=curr.next.next
            
        return head
